
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user has an admin role by checking
     * for the existence of their user ID in the 'roles_admin' collection.
     * NOTE: This is temporarily relaxed to allow any signed-in user for debugging.
     */
    function isAdmin() {
      // return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
      return isSignedIn(); // Temporarily allow any signed-in user as admin
    }
    
    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to real estate project data. All users can read, but only admins can write.
     * This is temporarily open for development.
     */
    match /projects/{projectId} {
      allow read, write: if true;
    }

    /**
     * @description Manages contact form submissions. Anyone can create, only admins can read/delete.
     */
    match /contact_messages/{contactMessageId} {
      allow get, list, update, delete: if isAdmin();
      allow create: if true; // Anyone can submit a message
    }

    /**
     * @description Admin role management. Only admins can read/write this collection.
     * This is locked down to prevent users from granting themselves admin access.
     * In a real-world scenario, this might be managed via a backend process or the Firebase Console.
     */
    match /roles_admin/{adminId} {
      allow read, write: if isAdmin();
    }
  }
}
