
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user has an admin role.
     * For this simplified app, we are NOT using this function for writes
     * to ensure the basic functionality works.
     */
    function isAdmin() {
      // This should be used in a real production app:
      // return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
      // For now, we rely on a simpler rule.
      return isSignedIn();
    }
    
    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to real estate project data. 
     * ANYONE can read project details.
     * ANY authenticated user (including anonymous users from the admin panel) can write.
     * This is NOT secure for production but enables the app's core loop.
     */
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /**
     * @description Manages contact form submissions. 
     * ANYONE can create a message.
     * ONLY "admins" (any signed-in user) can read/delete them.
     */
    match /contact_messages/{contactMessageId} {
      allow get, list, delete: if isSignedIn();
      allow create: if true;
    }

    /**
     * @description Admin role management.
     * Any signed-in user can manage roles for now.
     */
    match /roles_admin/{adminId} {
      allow read, write: if isSignedIn();
    }
  }
}
