
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user has an admin role by checking
     * for the existence of their user ID in the 'roles_admin' collection.
     * 
     * IMPORTANT: This is a placeholder. For a real app, you'd manage roles
     * via a secure backend. For this simplified logic, we are bypassing
     * a strict admin check for writes to allow the app to function.
     * In a production environment, this should be changed to:
     * return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
     */
    function isAdmin() {
      // For simplified logic, we're allowing any signed-in user to write.
      // This is NOT secure for production but simplifies the current dev flow.
      return isSignedIn();
    }
    
    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to real estate project data. 
     * All users can read project details, but only "admins" (any signed-in user for now) can write.
     */
    match /projects/{projectId} {
      allow read: if true;
      // Allow writes if the user is authenticated. This bypasses the need for a specific admin role for now.
      allow write: if isSignedIn();
    }

    /**
     * @description Manages contact form submissions. Anyone can create, only "admins" can read/delete.
     */
    match /contact_messages/{contactMessageId} {
      // Allow reads/deletes if the user is authenticated.
      allow get, list, delete: if isSignedIn();
      allow create: if true;
    }

    /**
     * @description Admin role management. This is now effectively unused with the simplified rules
     * but is kept for potential future use.
     */
    match /roles_admin/{adminId} {
      allow read, write: if isSignedIn();
    }
  }
}
