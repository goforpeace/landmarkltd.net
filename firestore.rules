
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // THIS IS NOT SECURE. It allows anyone to read and write to your database.
    // This is a temporary measure to make the app functional.
    // For a production app, you should implement proper security rules.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
